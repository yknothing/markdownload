# Environment Configuration for MarkDownload Development

# Test Configuration
NODE_ENV=development
CI=false

# Test Execution Settings
JEST_WORKERS=50%
JEST_TIMEOUT=15000
JEST_MAX_CONCURRENCY=8

# Coverage Settings
COVERAGE_THRESHOLD_LINES=85
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_BRANCHES=75
COVERAGE_THRESHOLD_STATEMENTS=85

# Development Settings
DEBUG_TESTS=false
VERBOSE_LOGGING=false

# Browser Extension Development
WEB_EXT_FIREFOX_PROFILE=
WEB_EXT_CHROME_BINARY=
WEB_EXT_SOURCE_DIR=src

# Quality Gates (for CI/CD)
QUALITY_THRESHOLD_COVERAGE=85
QUALITY_THRESHOLD_PASS_RATE=95
QUALITY_THRESHOLD_PERFORMANCE=300

# Store Publishing (CI/CD Secrets)
# These should be set as GitHub Secrets, not in .env files
# CHROME_EXTENSION_ID=
# CHROME_CLIENT_ID=
# CHROME_CLIENT_SECRET=
# CHROME_REFRESH_TOKEN=
# FIREFOX_JWT_ISSUER=
# FIREFOX_JWT_SECRET=

# Notification Settings
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# Performance Monitoring
ENABLE_PERFORMANCE_TRACKING=true
SLOW_TEST_THRESHOLD=1000
MEMORY_MONITORING=true